@model MelodyShop.DataAccessLayer.Cart

@{
    ViewBag.Title = "Usuń Z koszyka";
}

@if (TempData["SM"] != null)
{
    <div class="alert-danger alert">
        @TempData["SM"]
    </div>
}

<h2>Usuń z koszyka</h2>

<h3>Czy napewno chcesz usunąć produkt z koszyka?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Product.producer)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Product.producer)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.quantity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.quantity)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.price)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Usuń" class="btn btn-default" /> |
            @Html.ActionLink("Powrót", "Index")
        </div>
    }
</div>
